<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@android:drawable/gallery_thumb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeSchedulerApp"
        tools:targetApi="31">

        <!-- Add the following entry for CourseListActivity -->
        <activity
            android:name=".ui.todolist.editTD"
            android:exported="false" />
        <activity
            android:name=".ui.courses.CourseListActivity"
            android:exported="false" />
        <activity android:name=".ui.exam.ViewListContents"></activity>
        <activity
            android:name=".ui.assignments.editTD"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CollegeSchedulerApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>